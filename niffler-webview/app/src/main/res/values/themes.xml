<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.NifferAndroid" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/light_primary</item>
        <item name="colorSecondary">@color/light_secondary</item>
        <item name="colorOutline">@color/gray_300</item>
        <item name="colorSurfaceContainer">@color/white</item>
        <item name="fontFamily">@font/inter_regular</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="navigationViewStyle">@style/Widget.App.NavigationView</item>
    </style>

    <style name="Widget.App.NavigationView" parent="Widget.Material3.NavigationView">
        <item name="itemIconTint">@color/gray_600</item>
        <item name="itemTextColor">@color/gray_1000</item>
        <item name="itemTextAppearance">?attr/textAppearanceSubtitle1</item>
        <item name="itemShapeAppearance">?attr/shapeAppearanceCornerExtraSmall</item>
    </style>

    <style name="Base.Theme.NifferAndroid.HeaderTextAppearance" parent="Theme.Material3.Light.NoActionBar">
        <item name="fontFamily">@font/youngserif</item>
    </style>
    <style name="Theme.NifferAndroid" parent="Base.Theme.NifferAndroid" />
</resources>